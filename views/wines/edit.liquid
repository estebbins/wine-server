{% layout 'layout.liquid' %}
{% block content %}
    <div class="container-sm">
        <form action="/wines/{{ wine.id }}?_method=PUT" method="POST">
            <fieldset>
                <legend>Edit {{ wine.brand }}</legend>
                <label class="form-label">Brand:</label>
                <input 
                    type="text" class="form-control" 
                    name="brand" placeholder="What brand of wine is it?"
                    required value="{{ wine.brand }}"
                >
                <label class="form-label">Varietal:</label>
                <input 
                    type="text" class="form-control" 
                    name="varietal" placeholder="What type of grape is it (varietal)?"
                    required value="{{ wine.varietal }}"
                >
                <label class="form-label">Color:</label>
                <input 
                    type="color" class="form-control" 
                    name="color" placeholder="What color is the wine?"
                    required value="{{ wine.color }}"
                >
                <label class="form-label">Date Tasted:</label>
                <input 
                    type="date" class="form-control" 
                    name="dateTasted"
                >
            </fieldset>
            <input type="submit" class="btn btn-success" value="Edit {{ wine.brand }}">
            <a href="/wines/{{ wine.id }}" class="btn btn-warning">Back</a>
        </form>
    </div>
{% endblock %}